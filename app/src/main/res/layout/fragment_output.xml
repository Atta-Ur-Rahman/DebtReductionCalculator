<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whit"
    tools:context=".view.fragment.OutputFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:background="@drawable/round_back_text_view"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="80dp"
        android:text="Creditor Information Result"
        android:textColor="@color/whit"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimary"/>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="3sp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0sp"
                android:layout_height="@dimen/creditor_information_result_title_height"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="100sp"
                android:layout_weight="1.3"
                android:background="@drawable/round_back_text_view"
                android:gravity="center"
                android:text="Creditors in Chosen Order"
                android:textColor="@color/whit" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/creditor_information_result_title_height"
            android:orientation="horizontal"
            android:layout_marginTop="8sp">


            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:background="@drawable/round_back_text_view"
                android:gravity="center"
                android:text="Orignnal Balance"
                android:textColor="@color/whit" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:background="@drawable/round_back_text_view"
                android:gravity="center"
                android:text="Interest Paid"
                android:textColor="@color/whit" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="0.9"
                android:background="@drawable/round_back_text_view"
                android:gravity="center"
                android:text="Month to Pay off"
                android:textColor="@color/whit" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="0.9"
                android:background="@drawable/round_back_text_view"
                android:gravity="center"
                android:text="Month Paid off"
                android:textColor="@color/whit" />
        </LinearLayout>

    </LinearLayout>
    </TableLayout>
    </ScrollView>
    </LinearLayout>


